<%- include('shared/header.ejs')  %>


    <div class="container text-center my-5">
        <div class="user my-3">
            <i class="far fa-edit user-icon"></i>
            <h4 class="login">Register</h4>
        </div>
        <div class="card p-5 w-50 m-auto">
            <form method="POST" action="/Register">
                <input value="<%= oldInputs.name %>" class="form-control" placeholder="Enter your Name" type="text" name="name">
                <% if (errors.find(e=>e.param=='name')) { %>
                    <div class="alert alert-danger text-center my-3">
                        name is required
                    </div>
                    <% } %>
                        <input class="form-control my-2 " placeholder="Enter your email" type="email" name="email">
                        <% if (errors.find(e=>e.param=='email')) { %>
                            <div class="alert alert-danger text-center my-3">
                                email is required
                            </div>
                            <% } %>
                                <input class="form-control" placeholder="Enter your Password" type="password" name="password">
                                <% if (errors.find(e=>e.param=='password')) { %>
                                    <div class="alert alert-danger text-center my-3">
                                        password is required
                                    </div>
                                    <% } %>
                                        <input class="form-control  my-2" placeholder="Password Confirmation" type="password" name="PasswordConfirmation">
                                        <% if (errors.find(e=>e.param=='PasswordConfirmation')) { %>
                                            <div class="alert alert-danger text-center my-3">
                                                Your password and Confirmation password do not match
                                            </div>
                                            <% } %>
                                                <button class="btn btn-default-outline my-4 w-100 rounded">Register</button>
                                                <a class="btn btn-default-outline" href="/login">Login</a>
            </form>
        </div>
    </div>

    <%- include('shared/footer.ejs')  %>